<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".page.resetPwd.ResetPassWord"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo" /> <!-- Thay thế ic_login_logo bằng đường dẫn hoặc tên tài nguyên hình ảnh logo -->

    <EditText
        android:id="@+id/etAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:drawableLeft="@drawable/custom_icon_user"
        android:drawablePadding="16dp"
        android:hint="Email/Account"
        android:textColorHint="#325535"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/showinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/red"
        android:layout_marginBottom="24dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:drawablePadding="16dp"
        android:hint="Mã code"
        android:textColorHint="#325535"
        android:textColor="#000000"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/newPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:drawablePadding="16dp"
        android:hint="Mật khẩu mới"
        android:textColorHint="#325535"
        android:textColor="#000000"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/confirmNewPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:drawablePadding="16dp"
        android:hint="Nhập lại mật khẩu mới"
        android:textColorHint="#325535"
        android:textColor="#000000"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnResetPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếp tục"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="12dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnSendMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếp tục"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="12dp"/>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trở về"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/custom_button_cancel"
            />

    </LinearLayout>


</LinearLayout>